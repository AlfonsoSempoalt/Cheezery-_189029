<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/producto_img"
        android:layout_width="72dp"
        android:paddingTop="18dp"
        android:layout_height="72dp"
        android:src="@drawable/caramelfrap"
        />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/producto_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:textColor="@color/very_purple"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text= "@string/caramelFrap"
                />

            <TextView
                android:id="@+id/producto_description"
                android:layout_width="225dp"
                android:layout_height="77dp"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp"
                android:text="@string/cFrapDescription" />

        </LinearLayout>

    <TextView
        android:id="@+id/producto_price"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:width="1dp"
        android:textColor="@color/very_purple"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="$5.00" />


</LinearLayout>